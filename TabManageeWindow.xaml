<Window x:Class="GooseberryPortalApp.TabManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Tabs" 
        Height="300" Width="420"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- list -->
        <ListBox x:Name="TabList" DisplayMemberPath="Name" />

        <!-- buttons -->
        <StackPanel Orientation="Horizontal"
            Grid.Row="1"
            HorizontalAlignment="Right"
            Margin="0,10,0,0">

            <!-- Up / Down  -->
            <Button Content="▲"   Width="40" Click="MoveUp_Click"   Margin="0,0,8,0"/>
            <Button Content="▼" Width="40" Click="MoveDown_Click" Margin="0,0,16,0"/>

            <!-- existing buttons -->
            <Button Content="Remove"      Width="90" Click="Remove_Click"  Margin="0,0,8,0"/>
            <Button Content="Add…"        Width="90" Click="Add_Click"     Margin="0,0,8,0"/>
            <Button Content="Close"       Width="70" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
