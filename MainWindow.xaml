<Window x:Class="GooseberryPortalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Gooseberry Portal" 
        Height="640" Width="1040"
        Icon="pack://application:,,,/GooseberryIcon.ico">

    <Window.Resources>
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Scrollable Sidebar with Tabs -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="TabPanel" Background="#222">

                <Border Background="#2A2A2A" Margin="0,0,0,4">
                    <Button x:Name="SettingsButton"
                    Content="&#xE115;"
                    FontFamily="Segoe MDL2 Assets"
                    Height="36"
                    Margin="5" Padding="0"
                    HorizontalAlignment="Stretch"
                    Click="SettingsButton_Click"
                    ToolTip="Add / edit tabs"
                    Style="{StaticResource TabButtonStyle}"
                    Background="Transparent"/>
                </Border>
            </StackPanel>
        </ScrollViewer>




            <!-- WebView2 browser -->
        <wv2:WebView2 x:Name="MainWebView" Grid.Column="1"/>
    </Grid>
</Window>
